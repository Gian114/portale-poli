{
  "name": "back-end",
  "version": "1.0.0",
  "main": "./src/index.js",
  "scripts": {
    "test": "jest --detectOpenHandles",
    "test:coverage": "jest --coverage --colors",
    "test:unit": "npx jest --coverage --coverageDirectory=coverage/coverage_unit --colors --runInBand units/*",
    "test:integration": "npx jest --coverage --coverageDirectory=coverage/coverage_integration  --runInBand --colors integration/*",
    "start": "node ./src/index",
    "dev": "nodemon ./src/index"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "body-parser": "^1.20.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "mysql2": "^3.11.4",
    "sequelize": "^6.37.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-html-reporters": "^3.1.7",
    "supertest": "^7.0.0"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "coveragePathIgnorePatterns": [
      "src/index.js"
    ],
    "reporters": [
      "default",
      [
        "jest-html-reporters",
        {
          "enableMergeData": true,
          "dataMergeLevel": 1,
          "openReport": true,
          "publicPath": "./reports",
          "filename": "index.html"
        }
      ]
    ]
  }
}
